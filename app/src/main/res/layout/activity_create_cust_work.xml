<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCustWork"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gentop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gentopbar"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/latterline"
            android:layout_width="60dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/latterline"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/todo"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/backbutton"
            android:layout_width="60dp"
            android:layout_height="61dp"
            android:background="@drawable/backhomani"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/cusworktitle"
            android:layout_width="251dp"
            android:layout_height="46dp"
            app:srcCompat="@drawable/cusworktitle"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/todo" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/newplbody"
            android:contentDescription="@string/todo"
            android:layout_width="370dp"
            android:layout_height="637dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/plledit"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_above="@+id/cuswtitle"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="-29dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/workout_name"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cuswtitle"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_alignTop="@+id/newplbody"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/plledit"
            android:hint="@string/name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:textColor="@color/darklime"
            android:fontFamily="@font/volkhov"
            android:maxLength="30"/>

        <TextView
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_above="@+id/timesecs"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="-59dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/suggested_time"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/timesecs"
            android:layout_width="84dp"
            android:layout_height="48dp"
            android:layout_below="@+id/cuswtitle"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="59dp"
            android:background="@drawable/plledit"
            android:hint="@string/timesec"
            android:paddingStart="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:textColor="@color/darklime"
            android:fontFamily="@font/volkhov"
            android:inputType="number"
            android:maxLength="4"
            android:autofillHints="null"
            android:paddingEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/description"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="11dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/secs"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/restsecs"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="-159dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/rest_time"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/restsecs"
            android:layout_width="84dp"
            android:layout_height="48dp"
            android:layout_below="@+id/cuswtitle"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="159dp"
            android:autofillHints="null"
            android:background="@drawable/plledit"
            android:fontFamily="@font/volkhov"
            android:hint="@string/timesec"
            android:inputType="number"
            android:maxLength="4"
            android:paddingStart="10dp"
            android:paddingLeft="15dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:textColor="@color/darklime" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/description"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="-90dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/secs"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/descrptitile"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_above="@+id/description"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="-139dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/workout_description"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/description"
            android:layout_width="317dp"
            android:layout_height="112dp"
            android:layout_below="@+id/timesecs"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="139dp"
            android:background="@drawable/plledit"
            android:hint="@string/desc"
            android:textColor="@color/darklime"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:autofillHints=""
            android:inputType="textMultiLine"
            android:fontFamily="@font/volkhov"
            android:maxLength="200"/>

        <Button
            android:id="@+id/confirmcreate"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_alignBottom="@+id/newplbody"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/confirmcreate"/>

        <Button
            android:id="@+id/cancelcreate"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignEnd="@+id/newplbody"
            android:layout_alignRight="@+id/newplbody"
            android:layout_alignBottom="@+id/newplbody"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/cancelcreate" />

    </RelativeLayout>




</LinearLayout>