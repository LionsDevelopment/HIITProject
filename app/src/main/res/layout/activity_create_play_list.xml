<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePlayList"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/gentop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/gentopbar"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/latterline"
            android:layout_width="60dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/latterline"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/todo"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/backbutton"
            android:layout_width="60dp"
            android:layout_height="61dp"
            android:background="@drawable/backbutton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/newplaytitle"
            android:layout_width="201dp"
            android:layout_height="46dp"
            app:srcCompat="@drawable/newplaytitle"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/todo" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/newplbody"
            android:contentDescription="@string/todo"
            android:layout_width="370dp"
            android:layout_height="637dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/plledit"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_above="@+id/plltitle"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="-29dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/playlist_name"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/plltitle"
            android:layout_width="317dp"
            android:layout_height="48dp"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_alignTop="@+id/newplbody"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/plledit"
            android:hint="@string/name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="4dp"
            android:textColor="@color/darklime"
            android:fontFamily="@font/volkhov"
            android:maxLength="30"/>

        <TextView
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_above="@+id/dayspin"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="-53dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/weekday"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/dayspin"
            android:layout_width="174dp"
            android:layout_height="48dp"
            android:layout_below="@+id/plltitle"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/plledit"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_above="@+id/timespin"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="-54dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/time"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/timespin"
            android:layout_width="92dp"
            android:layout_height="48dp"
            android:layout_below="@+id/dayspin"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/plledit"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_above="@+id/description"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="-52dp"
            android:fontFamily="@font/volkhov"
            android:text="@string/playlist_description"
            android:textColor="@color/limegreen"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/description"
            android:layout_width="317dp"
            android:layout_height="100dp"
            android:layout_below="@+id/timespin"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/plledit"
            android:hint="@string/desc"
            android:textColor="@color/darklime"
            android:gravity="top"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:autofillHints=""
            android:inputType="textMultiLine"
            android:fontFamily="@font/volkhov"
            android:maxLength="300"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignStart="@+id/newplbody"
            android:layout_alignLeft="@+id/newplbody"
            android:layout_alignBottom="@+id/newplbody"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/confirmunselect"/>

    </RelativeLayout>




</LinearLayout>